<script is:inline>

    function deleteEvent(eventId) {
      window.location.href = `/ConfirmDeleteEvent?delete=${eventId}`;
  
    };
    function changeEventQty(eventId) {
      window.location.href = `/ConfirmChangeTickets?change=${eventId}`;
  
    };
    function changeEventPrice(eventId) {
      window.location.href = `/ConfirmChangeEventPrice?change=${eventId}`;
  
    };
    </script>
<Layout title="Manage Events">
  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>Event ID</th>
          <th>Event Type</th>
          <th>Tickets Remaining</th>
          <th>Event Price</th>
          <th>Event Description</th>
          <th>Event Image</th>
          <th>Event Date</th>
          <th>Event Start Time</th>
          <th>Event End Time</th>
        </tr>
      </thead>
      <tbody>
        {listEvents.map(events => {
          //const eventConfiguration = events.find(config => config.event_id === events.event_id);
          
        
          return (
            <tr key={events.event_id}>
              <td>{events.event_id}</td>
              <td>{events ? events.event_type : 'Tickets Unavailable'}</td>
              <td>{events.tickets_remaining}</td>
              <td>{events ? events.event_price : 'Price not available'}</td>
              <td>{events.event_description}</td>
              <td>{events.event_img}</td>
              <td>{events.event_date}</td>
              <td>{events.event_start_time}</td>
              <td>{events.event_end_time}</td>
              <td>
                <button class='delete-button' type="button" onclick={`deleteEvent(${events.event_id})`}>Delete</button>
                <button class='qty-button' type="button" onclick={`changeEventQty(${events.event_id})`}>Change QTY</button>
                <button class='price-button' type="button" onclick={`changeEventPrice(${events.event_id})`}>Change Price</button>
                <br/>
              </td>
            </tr>
          );
        })}
</Layout>