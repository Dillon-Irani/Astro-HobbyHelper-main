import { userInfo, getUserInfo, isLoggedIn, clearUserInfo  } from '../components/userInformation.js';
import { XataClient } from '../xata.js';
const isAdmin = isLoggedIn.get() && userInfo.get().userType === 'admin';
if (!isAdmin) {
  return Astro.redirect('/HobbyHome'); 
};
const xata = new XataClient({
  apiKey: import.meta.env.XATA_API_KEY,
  branch: import.meta.env.XATA_BRANCH
});
const { records } = await xata.db.events.getPaginated({
  pagination: {
    size: 50
  }
});


if (Astro.request.method === "POST") {
  try {
    const searchQuery = Astro.request.url;
    if (searchQuery.includes("delete=")) {
  const startIndex = searchQuery.indexOf("delete=") + 7;
  let deleteId = parseInt(searchQuery.slice(startIndex), 10);
  console.log(deleteId);
  
  const userToDelete = await xata.db.hh_user.filter({
      user_id: deleteId
  }).getMany();
  console.log(userToDelete);

  await xata.db.hh_user.delete(userToDelete);
          console.log(`User with ID ${deleteId} has been deleted Eliminated.`);
          return Astro.redirect('/ManageUsers');
       
    }
  } catch (error) {
    if (error instanceof Error) {
      console.error(error.message);
    }
  }
}

