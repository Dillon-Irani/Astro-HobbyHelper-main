---
import { userInfo, getUserInfo, isLoggedIn, clearUserInfo  } from './userInformation';
// Check if the user is logged in and their user type is admin
const isAdmin = isLoggedIn.get() && userInfo.get().userType === 'admin';
---
<style>
  a.nav-link {
    text-decoration: none;
    color: #FFFFFF !important; /* White Text */
    margin: 0 15px;
    font-family: 'Roboto', sans-serif;
  }
</style>



<nav>
  <a class="nav-link" href="/">REACT DEMO</a>
  <a class="nav-link" href="/HobbyHome/">Hobby Home</a>
  <a class="nav-link" href="/Products/">Products</a>
  <a class="nav-link" href="/BacklogBuilder/">Backlog Builder</a>
  <a class="nav-link" href="/ContactUs/">Contact Us</a>
  <a class="nav-link" href="/RequestProduct/">Request Products</a>

  {isLoggedIn.get() ? (
    // Render links when the user is logged in
    <>
      <a class="nav-link" href="/Profile/">Profile</a>
      {isAdmin && (
          <>
            <a class="nav-link" href="/AdminDashboard/">Admin Dashboard</a>
          </>
        )}
    </>
  ) : (
    // Render links when the user is not logged in
    <>
      <a class="nav-link" href="/SignIn/">Sign In</a>
      <a class="nav-link" href="/Register/">Register</a>
    </>
  )}
</nav>